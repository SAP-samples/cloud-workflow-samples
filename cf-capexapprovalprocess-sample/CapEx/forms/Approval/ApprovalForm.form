{
    "id": "approvalform",
    "schemaVersion": "1.0.0",
    "name": "ApprovalForm",
    "revision": "1.0",
    "type": "task",
    "readOnly": false,
    "content": [{
            "id": "investment_details",
            "type": "section",
            "title": "Investment Details",
            "content": [
                {
                    "id": "title",
                    "type": "string",
                    "label": "Title",
                    "readOnly": true,
                    "value": "${context.Title}",
                    "constraints": {
                        "required": true
                    }
                },
                {
                    "id": "requestId",
                    "type": "string",
                    "label": "Request Id",
                    "readOnly": true,
                    "value": "${context.RequestId}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "type",
                    "type": "string",
                    "label": "Type",
                    "readOnly": true,
                    "value": "${context.Investment.Type}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "country",
                    "type": "string",
                    "label": "Country/Region",
                    "readOnly": true,
                    "value": "${context.Investment.Country}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "business_unit",
                    "type": "string",
                    "label": "Business Unit",
                    "readOnly": true,
                    "value": "${context.Investment.BusinessUnit}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "description",
                    "type": "string",
                    "label": "Description",
                    "readOnly": true,
                    "value": "${context.Investment.Description}",
                    "control": {
                        "type": "TextArea",
                        "properties": {
                            "height": "medium"
                        }
                    },
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "capex",
                    "type": "float",
                    "label": "CAPEX",
                    "readOnly": true,
                    "value": "${context.Investment.CAPEX}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "opex",
                    "type": "float",
                    "label": "OPEX",
                    "readOnly": true,
                    "value": "${context.Investment.OPEX}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "amount",
                    "type": "float",
                    "label": "Total Cost",
                    "readOnly": true,
                    "value": "${context.Investment.TotalCost}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "irr",
                    "type": "float",
                    "label": "IRR",
                    "readOnly": true,
                    "value": "${context.Investment.IRR}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "roi",
                    "type": "float",
                    "label": "ROI",
                    "readOnly": true,
                    "value": "${context.Investment.ROI}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "currency",
                    "type": "string",
                    "label": "Currency",
                    "readOnly": true,
                    "value": "${context.Investment.Currency}",
                    "constraints": {
                        "required": false
                    }
                }
            ]
        },
        {
            "id": "sustainability",
            "type": "section",
            "title": "Sustainability",
            "content": [
                {
                    "id": "energyefficiency",
                    "type": "float",
                    "label": "Energy Efficiency %",
                    "readOnly": true,
                    "value": "${context.Sustainability.EnergyEfficiency}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "co2efficiency",
                    "type": "float",
                    "label": "CO2 Efficiency %",
                    "readOnly": true,
                    "value": "${context.Sustainability.CO2Efficiency}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "energycostsavings",
                    "type": "float",
                    "label": "Energy Cost Savings %",
                    "readOnly": true,
                    "value": "${context.Sustainability.EnergyCostSavings}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "watersavings",
                    "type": "float",
                    "label": "Water Savings %",
                    "readOnly": true,
                    "value": "${context.Sustainability.WaterSavings}",
                    "constraints": {
                        "required": false
                    }
                }
            ]
        },
        {
            "id": "investment_request",
            "type": "section",
            "title": "Investment Requester",
            "content": [
                {
                    "id": "first_name",
                    "type": "string",
                    "label": "First Name",
                    "readOnly": true,
                    "value": "${context.Requester.FirstName}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "last_name",
                    "type": "string",
                    "label": "Last Name",
                    "readOnly": true,
                    "value": "${context.Requester.LastName}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "comments",
                    "type": "string",
                    "label": "Comment from Requester",
                    "readOnly": true,
                    "value": "${context.Requester.Comments}",
                    "control": {
                        "type": "TextArea",
                        "properties": {
                            "height": "medium"
                        }
                    },
                    "constraints": {
                        "required": false
                    }
                }
            ]
        },
        {
            "id": "history_",
            "type": "section",
            "title": "History",
            "content": [
                {
                    "id": "history",
                    "type": "collection",
                    "title": "History",
                    "value": "${context.History}",
                    "content": [
                        {
                            "id": "user",
                            "type": "string",
                            "label": "User",
                            "readOnly": true,
                            "value": "${item.Id}",
                            "constraints": {
                                "required": false
                            }
                        },
                        {
                            "id": "role",
                            "type": "string",
                            "label": "Role",
                            "readOnly": true,
                            "value": "${item.Role}",
                            "constraints": {
                                "required": false
                            }
                        },
                        {
                            "id": "decision",
                            "type": "string",
                            "label": "Decision",
                            "readOnly": true,
                            "value": "${item.Decision}",
                            "constraints": {
                                "required": false
                            }
                        },
                        {
                            "id": "comments",
                            "type": "string",
                            "label": "Comment",
                            "readOnly": true,
                            "value": "${item.Comments}",
                            "constraints": {
                                "required": false
                            }
                        }
                    ]
                }
            ]
        },
        {
            "id": "decision",
            "type": "section",
            "title": "Comments",
            "content": [
                {
                    "id": "approval_comments",
                    "type": "string",
                    "label": "Approval Comments",
                    "readOnly": false,
                    "value": "${context.comments}",
                    "control": {
                        "type": "TextArea",
                        "properties": {
                            "height": "large"
                        }
                    },
                    "constraints": {
                        "required": false
                    }
                }
            ]
        }],
    "decisions": [  {
            "id": "approve",
            "text": "Approve",
            "decisionType": "positive"
        },
        {
            "id": "reject",
            "text": "Reject",
            "decisionType": "negative"
        },
        {
            "id": "rework",
            "text": "Rework",
            "decisionType": ""
        }]
}